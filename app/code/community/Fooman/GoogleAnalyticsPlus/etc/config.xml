<?xml version="1.0"?>
<config>
    <modules>
        <Fooman_GoogleAnalyticsPlus>
            <version>0.17.0</version>
        </Fooman_GoogleAnalyticsPlus>
    </modules>

    <global>
        <models>
            <googleanalyticsplus>
                <class>Fooman_GoogleAnalyticsPlus_Model</class>
            </googleanalyticsplus>
        </models>
        <helpers>
            <googleanalyticsplus>
                <class>Fooman_GoogleAnalyticsPlus_Helper</class>
            </googleanalyticsplus>
        </helpers>
        <blocks>
            <googleanalyticsplus>
                <class>Fooman_GoogleAnalyticsPlus_Block</class>
            </googleanalyticsplus>
        </blocks>
        <resources>
            <googleanalyticsplus_setup>
                <setup>
                    <module>Fooman_GoogleAnalyticsPlus</module>
                </setup>
            </googleanalyticsplus_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <googleanalyticsplus>
                    <file>googleanalyticsplus.xml</file>
                </googleanalyticsplus>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <googleanalyticsplus_core_block_abstract_to_html_after>
                        <class>googleanalyticsplus/observer</class>
                        <method>addCheckoutStepTracking</method>
                    </googleanalyticsplus_core_block_abstract_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
            <checkout_onepage_controller_success_action>
                <observers>
                    <googleanalyticsplus_success_set_order>
                        <class>googleanalyticsplus/observer</class>
                        <method>setOrder</method>
                    </googleanalyticsplus_success_set_order>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <googleanalyticsplus_success_set_order>
                        <class>googleanalyticsplus/observer</class>
                        <method>setOrder</method>
                    </googleanalyticsplus_success_set_order>
                </observers>
            </checkout_multishipping_controller_success_action>
            <controller_action_predispatch_checkout_cart_add>
                <observers>
                    <googleanalyticsplus_checkout_cart_add>
                        <class>googleanalyticsplus/observer</class>
                        <method>checkoutCartAdd</method>
                    </googleanalyticsplus_checkout_cart_add>
                </observers>
            </controller_action_predispatch_checkout_cart_add>
            <customer_login>
                <observers>
                    <googleanalyticsplus_checkout_cart_add>
                        <class>googleanalyticsplus/observer</class>
                        <method>customerLogin</method>
                    </googleanalyticsplus_checkout_cart_add>
                </observers>
            </customer_login>
            <customer_register_success>
                <observers>
                    <googleanalyticsplus_checkout_cart_add>
                        <class>googleanalyticsplus/observer</class>
                        <method>customerRegistration</method>
                    </googleanalyticsplus_checkout_cart_add>
                </observers>
            </customer_register_success>
        </events>
    </frontend>
    <default>
        <google>
            <analyticsplus_abstract>
                <success_page_handles>
                    <checkout_multishipping_success/>
                    <checkout_onepage_success/>
                </success_page_handles>
            </analyticsplus_abstract>
            <analyticsplus_classic>
                <conversionenabled>0</conversionenabled>
                <conversionid/>
                <conversionlanguage>en</conversionlanguage>
                <conversionlabel/>
                <categorytrackingattribute/>
                <debug>0</debug>
            </analyticsplus_classic>
            <analyticsplus_dynremarketing>
                <feed_product_id>entity_id</feed_product_id>
            </analyticsplus_dynremarketing>
            <analyticsplus_universal>
                <debug>0</debug>
            </analyticsplus_universal>
        </google>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Fooman_GoogleAnalyticsPlus/>
            </modules>
        </suite>
    </phpunit>
</config>

